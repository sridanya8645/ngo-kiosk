    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "es-abstract": "^1.24.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs": "^0.0.1-security",
    "html5-qrcode": "^2.3.8",
    "joi": "^17.12.2",
    "lottie-react": "^2.4.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "nodemailer": "^6.9.4",
    "path": "^0.12.7",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-confetti": "^6.4.0",
    "react-custom-roulette": "^1.4.1",
